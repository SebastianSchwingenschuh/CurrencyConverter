<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.canvas.Canvas?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.currencyconverter.CurrencyConverterController">
    <padding>
        <Insets bottom="7.0" left="20.0" right="20.0" top="7.0"/>
    </padding>

    <VBox>
        <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="7.0" left="20.0" right="20.0" top="7.0"/>
            </padding>

            <Label text="Currency Converter" style="-fx-font-size: 20;"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="7.0" left="20.0" right="20.0" top="7.0"/>
            </padding>

            <Label text="Amount To Convert:"/>
            <TextField fx:id="amountToConvert"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="7.0" left="20.0" right="20.0" top="7.0"/>
            </padding>

            <Label text="Converted Amount:"/>
            <TextField fx:id="convertedAmount"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="7.0" left="20.0" right="20.0" top="7.0"/>
            </padding>

            <Label text="Desired Conversion:"/>
            <ComboBox fx:id="desiredConversion" onAction="#handleConversionChange"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="7.0" top="7.0"/>
            </padding>

            <Button fx:id="reset" text="Reset" onAction="#handleReset"/>
            <Button fx:id="convert" text="Convert" onAction="#handleConvert"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="7.0" left="20.0" right="20.0" top="7.0"/>
            </padding>

            <Label text="Trend" style="-fx-font-size: 17;"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets bottom="7.0" left="20.0" right="20.0" top="7.0"/>
            </padding>

            <Canvas fx:id="canvFabric" width="300" height="100"/>
        </HBox>
    </VBox>

</VBox>