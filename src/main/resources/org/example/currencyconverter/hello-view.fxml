<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.currencyconverter.CurrencyConverterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox>
        <Label textAlignment="CENTER" >Currency Converter</Label>
        <HBox alignment="CENTER">
            <Label>Amount To Convert</Label>
            <TextField fx:id="amountToConvert">zB.: 10</TextField>
        </HBox>
        <HBox alignment="CENTER">
            <Label>Converted Amount</Label>
            <TextField editable="false">...</TextField>
        </HBox>
        <HBox alignment="CENTER">
            
        </HBox>
    </VBox>
</VBox>
